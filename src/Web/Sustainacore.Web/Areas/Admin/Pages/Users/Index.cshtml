@page
@model UsersIndexModel
@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Users)
        {
            <tr>
                <td>@u.Email</td>
                <td>@u.DisplayName</td>
                <td>@u.Role</td>
                <td>
                    <a asp-page="/Users/Edit" asp-route-id="@u.Id">Edit Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
