@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form method="post">
    <div><label>Name</label><input asp-for="DisplayName" required /></div>
    <div><label>Email</label><input asp-for="Email" type="email" required /></div>
    <div><label>Password</label><input asp-for="Password" type="password" required /></div>
    <button type="submit">Create account</button>
</form>
<a asp-page="/Account/Login">Already have an account? Sign in</a>

