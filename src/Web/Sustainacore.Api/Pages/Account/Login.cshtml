@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<form method="post">
    <div><label>Email</label><input asp-for="Email" type="email" required /></div>
    <div><label>Password</label><input asp-for="Password" type="password" required /></div>
    <button type="submit">Sign in</button>
</form>
<a asp-page="/Account/Register">Need an account? Register</a>
