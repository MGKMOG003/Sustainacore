<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Sustainacore.Mobile.Views.LoginPage"
    Title="Login"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center">

            <Label
                Text="SustainaCore"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center" />

            <Frame Padding="20" CornerRadius="12">
                <VerticalStackLayout Spacing="12">

                    <Entry
                        x:Name="EmailEntry"
                        Placeholder="Email"
                        Keyboard="Email"
                        ClearButtonVisibility="WhileEditing" />

                    <Entry
                        x:Name="PasswordEntry"
                        Placeholder="Password"
                        IsPassword="True"
                        ClearButtonVisibility="WhileEditing" />

                    <Button
                        Text="Login"
                        CornerRadius="8"
                        Clicked="OnLoginClicked" />

                    <ActivityIndicator
                        x:Name="LoadingIndicator"
                        IsVisible="False"
                        IsRunning="False" />

                    <Label
                        x:Name="ErrorLabel"
                        TextColor="Red"
                        FontSize="14"
                        IsVisible="False"
                        HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
